@model API.Data.User

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Chi tiết người dùng</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<style>
    h1 {
        text-align: center;
        padding: 10px;
    }

    .shadow {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .user-img {
        max-width: 150px;
        max-height: 150px;
        border-radius: 50%;
    }

    .table th, .table td {
        vertical-align: middle;
    }
</style>
<body>

    <div class="container">
        <h1>Chi tiết người dùng</h1>

        <div class="row justify-content-center">
            <div class="row">
                <table class="table table-bordered table-striped">
                    <tr>
                        <th>Username</th>
                        <td>@Html.DisplayFor(model => model.Username)</td>
                    </tr>
                    <tr>
                        <th>Password</th>
                        <td>@Html.DisplayFor(model => model.Password)</td>
                    </tr>
                    <tr>
                        <th>Confirm Password</th>
                        <td>@Html.DisplayFor(model => model.ConfirmPassword)</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>@Html.DisplayFor(model => model.Email)</td>
                    </tr>
                    <tr>
                        <th>Full Name</th>
                        <td>@Html.DisplayFor(model => model.Fullname)</td>
                    </tr>
                    <tr>
                        <th>Phone</th>
                        <td>@Html.DisplayFor(model => model.Phone)</td>
                    </tr>
                    <tr>
                        <th>Address</th>
                        <td>@Html.DisplayFor(model => model.Address)</td>
                    </tr>
                    <tr>
                        <th>Role</th>
                        <td>@Html.DisplayFor(model => model.Role)</td>
                    </tr>
                  
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-auto">
                <a asp-action="Edit" asp-route-id="@Model?.UserId" class="btn btn-primary">Chỉnh sửa</a>
            </div>
            <div class="col-auto">
                <a asp-action="Index" class="btn btn-secondary btn-lg shadow">Back to List</a>
            </div>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
